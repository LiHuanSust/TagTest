<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
    <include layout="@layout/toolbar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/account_name"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            />
         <TextView
             android:id="@+id/account_name"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:textSize="20sp"
             android:hint="test"
             android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/account_type"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/account_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="test"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/account_cost"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/account_cost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="test"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/account_salary"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/account_salary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="test"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/account_use_number"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/account_use_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="test"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/account_add_time"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/account_add_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="test"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/account_near_use"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/account_near_use"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="test"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/account_remark"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/account_remark"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:hint="test"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/account_value_button_alter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改"/>
        <Button
            android:id="@+id/account_value_button_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="删除"/>

    </LinearLayout>
</RelativeLayout>
