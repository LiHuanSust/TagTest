<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/cost_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无"
        android:textSize="20sp"
        android:textColor="#FFCC66"
        />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="常用类别："
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/type_select_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="其他类别>"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="早餐"
                android:background="@drawable/cost_add_select_style"
                />
            <Button
                android:id="@+id/button2"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="午餐"
                android:background="@drawable/cost_add_select_style"
                />
            <Button
                android:id="@+id/button3"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="晚餐"
                android:background="@drawable/cost_add_select_style"
                />
            <Button
                android:id="@+id/button4"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="买菜"
                android:background="@drawable/cost_add_select_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button5"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="零食"
                android:background="@drawable/cost_add_select_style"
                />
            <Button
                android:id="@+id/button6"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="饮品"
                android:background="@drawable/cost_add_select_style"
                />
            <Button
                android:id="@+id/button7"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="服饰"
                android:background="@drawable/cost_add_select_style"
                />
            <Button
                android:id="@+id/button8"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="烟酒"
                android:background="@drawable/cost_add_select_style"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button9"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="化妆品"
                android:background="@drawable/cost_add_select_style"
                />
            <Button
                android:id="@+id/button10"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="酒店"
                android:background="@drawable/cost_add_select_style"
                />
            <Button
                android:id="@+id/button11"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="租房"
                android:background="@drawable/cost_add_select_style"
                />
            <Button
                android:id="@+id/button12"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="出行"
                android:background="@drawable/cost_add_select_style"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="100dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="金额:"
            />
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/cost_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="付款方式："
            android:gravity="center_horizontal"

            />
        <Spinner
            android:id="@+id/spinner_cost_type"
           android:entries="@array/apply_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/bank_card_select"
        android:visibility="gone"
       >
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="银行卡选择："
            android:gravity="center_horizontal"

            />
        <Spinner
            android:id="@+id/spinner_bank_select"
            android:entries="@array/apply_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >
        <EditText
            android:id="@+id/cost_remarks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="备注："
            android:gravity="left|top"
            android:maxLines="3"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
   <Button
       android:id="@+id/cost_add_save"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:text="save"
       />
    <Button
        android:id="@+id/cost_add_cancel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="cancel"
        />
    </LinearLayout>
</LinearLayout>