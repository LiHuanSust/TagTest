<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100dp"
    >
    <LinearLayout
        android:id="@+id/show_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/cost_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日消费:"

            />
            <TextView
                android:id="@+id/cost_day_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/get_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日收入:"

                />
            <TextView
                android:id="@+id/get_day_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/cost_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月消费:"

                />
            <TextView
                android:id="@+id/cost_month_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/get_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本月收入:"

                />
            <TextView
                android:id="@+id/get_month_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:layout_marginLeft="10dp"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/show_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</LinearLayout>